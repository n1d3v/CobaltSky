<UserControl x:Class="CobaltSky.UserControls.PostItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:CobaltSky.UserControls;assembly=CobaltSky"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="480"
    Width="Auto" HorizontalAlignment="Stretch">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}" HorizontalAlignment="Stretch">
        <StackPanel Margin="10" HorizontalAlignment="Stretch" Width="Auto">
            <StackPanel x:Name="AuthorInfo" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Image x:Name="AuthorPicture"
                       Width="50"
                       HorizontalAlignment="Left"
                       Source="{Binding author.avatar}" />
                <StackPanel Margin="13,0,0,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding author.displayName}" FontWeight="Light" Width="390"/>
                    <TextBlock Text="{Binding record.createdAt}" FontSize="15" Opacity="0.7" />
                </StackPanel>
            </StackPanel>

            <Grid x:Name="PostInfo" Margin="63,0,20,0" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock x:Name="PostTextBlock" Grid.Row="0" TextWrapping="Wrap" Visibility="{Binding PostTextVisibility}" HorizontalAlignment="Stretch" Margin="0,0,0,6"/>
                <uc:PostEmbed x:Name="PostEmbedCont" Thumb="{Binding embed.external.thumb}" Title="{Binding embed.external.title}" Description="{Binding embed.external.description}" Visibility="{Binding EmbedVisibility}" Grid.Row="1" />
                <uc:ReplyItem x:Name="ReplyCont" Grid.Row="2" AuthorAvatar="{Binding embed.record.author.avatar}" DisplayName="{Binding embed.record.author.displayName}" Info="{Binding embed.record.author.handle}" Text="{Binding embed.record.value.text}" Visibility="{Binding RecordVisibility}"  />
                <Image x:Name="PostImageCont" Grid.Row="3" Source="{Binding embed.images[0].thumb}" />
                <MediaElement x:Name="PostVideoCont" Grid.Row="4" Source="{Binding PostVideo}" />

                <StackPanel Grid.Row="5" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10,0,0" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="..\Images\Home\PostControl\Unselected\like.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="{Binding likeCount}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <Image Source="..\Images\Home\PostControl\Unselected\comment.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="{Binding replyCount}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <Image Source="..\Images\Home\PostControl\Unselected\repost.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="{Binding repostCount}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>