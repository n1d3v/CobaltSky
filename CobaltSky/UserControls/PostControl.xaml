<UserControl x:Class="CobaltSky.UserControls.PostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignWidth="480"
    Width="Auto" HorizontalAlignment="Stretch">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}" HorizontalAlignment="Stretch">
        <StackPanel Margin="10" HorizontalAlignment="Stretch" Width="Auto">
            <StackPanel x:Name="AuthorInfo" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Image Source="{Binding AuthorPicture}"
                       Width="50"
                       HorizontalAlignment="Left" />
                <StackPanel Margin="13,0,0,0" HorizontalAlignment="Stretch">
                    <TextBlock Text="{Binding AuthorName}" FontWeight="Light" Width="390"/>
                    <TextBlock Text="{Binding AuthorPostDate}" FontSize="15" Opacity="0.7" />
                </StackPanel>
            </StackPanel>

            <Grid x:Name="PostInfo" Margin="63,0,20,0" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="{Binding PostText}" TextWrapping="Wrap" HorizontalAlignment="Stretch"/>

                <Image Grid.Row="1" Source="{Binding PostImage}" Margin="0,5,0,0" />

                <StackPanel Grid.Row="2" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10,0,0" HorizontalAlignment="Stretch">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="..\Images\PostControl\heart.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="{Binding LikeCount}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <Image Source="..\Images\PostControl\comment.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="{Binding CommentCount}"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <Image Source="..\Images\PostControl\repost.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="{Binding RepostCount}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>