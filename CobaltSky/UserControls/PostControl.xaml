<UserControl x:Class="CobaltSky.UserControls.PostControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="140" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}" MaxHeight="140">
        <StackPanel Margin="10">
            <StackPanel x:Name="AuthorInfo" Orientation="Horizontal" VerticalAlignment="Center">
                <Image Source="..\Images\user-pfp.png"
                   Width="50"
                   HorizontalAlignment="Left" />
                <StackPanel Margin="13,0,0,0">
                    <TextBlock Text="AuthorName" FontWeight="Light" />
                    <TextBlock Text="AuthorPostDate" FontSize="15" Opacity="0.7" />
                </StackPanel>
            </StackPanel>
            <Grid x:Name="PostInfo" Margin="63,0,20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" Text="Hello! This is a sample post." TextWrapping="Wrap"/>

                <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Bottom" Margin="0,10,0,0">
                    <StackPanel Orientation="Horizontal">
                        <Image Source="..\Images\PostControl\heart.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="6.4K"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <Image Source="..\Images\PostControl\comment.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="43"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                        <Image Source="..\Images\PostControl\repost.png" Width="30"/>
                        <TextBlock Foreground="#888888" Margin="10,0,0,0" Text="21"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
</UserControl>