<UserControl x:Class="CobaltSky.UserControls.SettingsItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="70" d:DesignWidth="480">
    
    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneBackgroundBrush}">
        <StackPanel Orientation="Horizontal">
            <Image Source="{Binding SettingsIconSource}"  Margin="3,0,0,0"/>
            <StackPanel VerticalAlignment="Center" Margin="13,0,0,0">
                <TextBlock Text="{Binding SettingsName}" FontWeight="Light" FontSize="24" />
                <TextBlock Text="{Binding SettingsDescription}" FontSize="15" />
            </StackPanel>
        </StackPanel>
    </Grid>
</UserControl>